@model ProyectoDSWToolify.Models.Proveedor

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Nuevo Proveedor";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-3 fw-bold">Registrar Nuevo Proveedor</h1>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ruc" class="form-label">Ruc</label>
                        <input asp-for="ruc" class="form-control" required />
                        <span asp-validation-for="ruc" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="razonSocial" class="form-label">Razon Social</label>
                        <input asp-for="razonSocial" class="form-control" required/>
                        <span asp-validation-for="razonSocial" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="telefono" class="form-label">Telefono</label>
                        <input asp-for="telefono" class="form-control" required />
                        <span asp-validation-for="telefono" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="direccion" class="form-label">Direccion</label>
                        <input asp-for="direccion" class="form-control" required />
                        <span asp-validation-for="direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="distrito.idDistrito" class="form-label">Distrito</label>
                    @Html.DropDownListFor(model => model.distrito.idDistrito, (SelectList)ViewBag.distritos, "Seleccione un distrito", new { @class = "form-select" })
                    <span asp-validation-for="distrito.idDistrito" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
