@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_LayoutVendedor.cshtml";
}

<div class="App">
    <div class="min-vh-100 bg-light p-4">
        <div class="container-xl mx-auto">

            <!-- Alertas -->
            <div id="alert-placeholder"></div>

            <!-- Encabezado -->
            <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-lg-between gap-4 mb-4">
                <div>
                    <h1 class="fs-3 fw-bold text-primary-custom d-flex align-items-center gap-2">
                        <i class="fas fa-cart-shopping"></i>
                        Gestión de Ventas
                    </h1>
                    <p class="text-muted mt-1">Selecciona productos y gestiona tu venta fácilmente</p>
                </div>
            </div>

            <!-- Productos Seleccionados -->
            <section class="card shadow rounded-4 mb-5">
                <div class="card-header bg-color-primary text-white d-flex justify-content-between align-items-center fw-semibold">
                    <span><i class="fas fa-box-open me-2"></i> Productos Seleccionados</span>
                    <span class="badge bg-light text-primary-custom px-3 py-1 rounded-pill" id="countSeleccionados">
                        0 productos
                    </span>
                </div>
                <div class="card-body p-3" id="contenedorSeleccionados">
                    <p class="text-center text-muted py-4 mb-0">No hay productos seleccionados</p>
                </div>
            </section>

            <!-- Botón agregar producto -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fs-4 fw-bold text-primary-custom d-flex align-items-center gap-2">
                    <i class="fas fa-list-ul"></i> Catálogo de Productos
                </h2>
                <button type="button" class="btn bg-color-primary text-white shadow-sm d-flex align-items-center gap-2"
                        data-bs-toggle="modal" data-bs-target="#modalProductos">
                    <i class="fas fa-plus"></i> Agregar Producto
                </button>
            </div>

            <!-- Carrito de Venta -->
            <section class="card shadow rounded-4">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center fw-semibold">
                    <span><i class="fas fa-shopping-cart me-2"></i> Carrito de Venta</span>
                    <span class="badge bg-light text-success px-3 py-1 rounded-pill" id="countCarrito">
                        0 productos
                    </span>
                </div>
                <div class="card-body p-3" id="contenedorCarrito">
                    <p class="text-center text-muted py-4 mb-0">El carrito está vacío</p>
                </div>
            </section>
        </div>
    </div>

    <input type="hidden" id="currentUserId" value="@ViewBag.IdUsuario" />

    <!-- Modal Productos -->
    <div class="modal fade" id="modalProductos" tabindex="-1" aria-labelledby="modalProductosLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content rounded-4">
                <div class="modal-header bg-color-primary text-white ">
                    <h5 class="modal-title" id="modalProductosLabel"><i class="fas fa-boxes me-2"></i> Catálogo de Productos</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <input type="text" id="txtBusqueda" class="form-control mb-3" placeholder="Buscar producto...">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light bg-color-primary">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Categoría</th>
                                    <th>Precio (S/.)</th>
                                    <th>Stock</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody id="tablaProductos">
                                <!-- JS carga productos aquí -->
                            </tbody>
                        </table>
                        <nav>
                            <ul class="pagination pagination-lg justify-content-center" id="paginacionProductos"></ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/VentasVendedor.js"></script>
}
