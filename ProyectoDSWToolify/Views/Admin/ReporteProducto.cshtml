@using ProyectoDSWToolify.Models.ViewModels.AdminVM
@model IEnumerable<ListarProductosPorCategoriaDTO>

@{
    ViewData["Title"] = "Reporte de Productos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var selectedOrden = Context.Request.Query["orden"].ToString();
    var selectedCategoria = Context.Request.Query["idCategoria"].ToString();
    var paginaActual = (int)(ViewBag.pagActual ?? 1);
    var totalPaginas = (int)(ViewBag.numeroPag ?? 1);
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-3 fw-bold">Reporte de Productos</h1>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="ReporteProducto" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Categoría</label>
                        <select name="idCategoria" class="form-select" asp-items="@ViewBag.Categorias">
                            <option value="0">-- Seleccione --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Orden por Stock</label>
                        <select name="orden" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="ASC" selected="@(selectedOrden == "ASC")">Ascendente</option>
                            <option value="DESC" selected="@(selectedOrden == "DESC")">Descendente</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex gap-2 mt-3 mt-md-0">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i> Buscar
                        </button>
                        <a asp-action="ReporteProducto"
                           asp-route-idCategoria="@selectedCategoria"
                           asp-route-orden="@selectedOrden"
                           asp-route-export="excel"
                           class="btn btn-success w-100">
                            <i class="bi bi-file-earmark-excel me-1"></i> Excel
                        </a>
                        <a asp-action="ReporteProducto"
                           asp-route-idCategoria="@selectedCategoria"
                           asp-route-orden="@selectedOrden"
                           asp-route-export="pdf"
                           class="btn btn-danger w-100">
                            <i class="bi bi-file-earmark-pdf me-1"></i> PDF
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id Producto</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Proveedor</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Fecha Registro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idProducto</td>
                        <td>@item.nombre</td>
                        <td>@item.descripcion</td>
                        <td>@item.proveedor</td>
                        <td>@item.categoria</td>
                        <td>S/. @item.precio.ToString("F2")</td>
                        <td class="fw-bold @(item.stock > 20 ? "text-success" : "text-danger")">
                            @item.stock
                        </td>
                        <td>@item.fechaRegistro.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (totalPaginas > 1)
    {
        <div class="d-flex justify-content-center mt-3">
            <nav>
                <ul class="pagination">
                    @for (int i = 1; i <= totalPaginas; i++)
                    {
                        <li class="page-item @(i == paginaActual ? "active" : "")">
                            <a class="page-link"
                               asp-action="ReporteProducto"
                               asp-route-idCategoria="@selectedCategoria"
                               asp-route-orden="@selectedOrden"
                               asp-route-pag="@i">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>
