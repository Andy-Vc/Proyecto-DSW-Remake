@model IEnumerable<ProyectoDSWToolify.Models.Producto>
@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-3 fw-bold">Listado de Productos</h1>
    <hr />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle-fill me-2"></i>Nuevo Producto
        </a>

        <form asp-action="Index" method="get" class="d-flex flex-grow-1 ms-4">
            <div class="row w-100 g-3">
                <div class="col-md-4">
                    <select name="proveedor" class="form-select" asp-items="@ViewBag.Proveedores">
                        <option value="0">-- Todos los Proveedores --</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <select name="categoria" class="form-select" asp-items="@ViewBag.Categorias">
                        <option value="0">-- Todas las Categorías --</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Buscar por nombre..." value="@ViewBag.CurrentSearchQuery" />
                    <button type="submit" class="btn btn-info ms-2">
                        <i class="bi bi-search"></i>
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <div class="card-body table-responsive p-0 rounded-3 shadow-sm">
        <table class="table table-hover table-striped table-borderless align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="py-3">Imagen</th>
                    <th class="py-3">Nombre</th>
                    <th class="py-3">Proveedor</th>
                    <th class="py-3">Categoría</th>
                    <th class="py-3">Precio</th>
                    <th class="py-3">Stock</th>
                    <th class="py-3 text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.imagen"
                                 alt="@item.nombre"
                                 class="img-thumbnail"
                                 style="width: 60px; height: 60px; object-fit: cover;"
                                 onerror="this.onerror=null;this.src='/assets/no-imagen.jpg';" />
                        </td>
                        <td>@item.nombre</td>
                        <td>@item.proveedor.razonSocial</td>
                        <td>@item.categoria.descripcion</td>
                        <td><span class="fw-bold">S/ @item.precio</span></td>
                        <td>@item.stock</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.idProducto" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.idProducto" class="btn btn-sm btn-info text-white" title="Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (item.estado)
                                {
                                    <a asp-action="ToggleEstado" asp-route-id="@item.idProducto" class="btn btn-sm btn-success" title="Desactivar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ToggleEstado" asp-route-id="@item.idProducto" class="btn btn-sm btn-danger" title="Activar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Navegación de páginas" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pag="@(ViewBag.Page - 1)" asp-route-proveedor="@ViewBag.ProveedorId" asp-route-categoria="@ViewBag.CategoriaId" asp-route-searchQuery="@ViewBag.CurrentSearchQuery" aria-label="Anterior">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pag="@i" asp-route-proveedor="@ViewBag.ProveedorId" asp-route-categoria="@ViewBag.CategoriaId" asp-route-searchQuery="@ViewBag.CurrentSearchQuery">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pag="@(ViewBag.Page + 1)" asp-route-proveedor="@ViewBag.ProveedorId" asp-route-categoria="@ViewBag.CategoriaId" asp-route-searchQuery="@ViewBag.CurrentSearchQuery" aria-label="Siguiente">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

</div>