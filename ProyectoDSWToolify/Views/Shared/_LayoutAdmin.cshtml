
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LayoutAdmin.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Topbar -->
    <div class="topbar">
        <button class="btn btn-outline-light menu-toggle d-md-none" type="button" onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>
        <h2 class="fw-bold">Toolify</h2>
        <div class="d-flex align-items-center">
            <span class="me-3">@User.Identity.Name @User.FindFirst("Apellido")?.Value</span>
            <form asp-controller="UserAuth" asp-action="Logout" method="post" class="d-inline">
                <button class="btn btn-outline-light"><i class="bi bi-box-arrow-right"></i> Salir</button>
            </form>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#listadosMenu">
                    <i class="bi bi-card-list"></i> Listados
                </a>
                <div class="collapse ps-3" id="listadosMenu">
                    <a asp-controller="Proveedor" asp-action="Index" class="nav-link">Proveedores</a>
                    <a asp-controller="Producto" asp-action="Index" class="nav-link">Productos</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#reportesMenu">
                    <i class="bi bi-bar-chart"></i> Reportes
                </a>
                <div class="collapse ps-3" id="reportesMenu">
                    <a asp-controller="Admin" asp-action="ReporteVenta" class="nav-link">Reporte Venta</a>
                    <a asp-controller="Admin" asp-action="ReporteProducto" class="nav-link">Reporte Producto</a>
                </div>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-info text-center fw-bold">
                @TempData["Mensaje"]
            </div>
        }

        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }
    </script>

    @Html.Partial("_SweetAlert")
    @RenderSection("Scripts", required: false)
</body>
</html>
