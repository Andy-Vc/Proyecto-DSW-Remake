<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LayoutAdmin.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Topbar -->
    <div class="topbar">
        <button class="btn btn-outline-light menu-toggle d-md-none" type="button" onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>
        <h2 class="fw-bold">Toolify</h2>
        <div class="d-flex align-items-center">
            <span class="me-3">
                <i class="fa fa-user me-1"></i>
                @User.Identity.Name @User.FindFirst("Apellido")?.Value
            </span>
            <form asp-controller="UserAuth" asp-action="Logout" method="post" class="d-inline">
                <button class="btn btn-outline-light">
                    <i class="fa fa-sign-out-alt me-1"></i> Salir
                </button>
            </form>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">
                    <i class="fa fa-tachometer-alt me-2"></i> Dashboard
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Proveedor" asp-action="Index" class="nav-link">
                    <i class="fa fa-truck me-2"></i> Proveedores
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Producto" asp-action="Index" class="nav-link">
                    <i class="fa fa-boxes me-2"></i> Productos
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Categoria" class="nav-link">
                    <i class="fa fa-tags me-2"></i> Categorías
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="ReporteVenta" class="nav-link">
                    <i class="fa fa-chart-line me-2"></i> Reporte de Ventas
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="ReporteProducto" class="nav-link">
                    <i class="fa fa-chart-bar me-2"></i> Reporte de Productos
                </a>
            </li>

            <li class="nav-item">
                <a asp-controller="Admin" asp-action="MensajeContacto" class="nav-link">
                    <i class="fa fa-envelope-open-text me-2"></i> Mensajes
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-info text-center fw-bold">
                @TempData["Mensaje"]
            </div>
        }

        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }
    </script>

    @Html.Partial("_SweetAlert")
    @RenderSection("Scripts", required: false)
</body>
</html>
