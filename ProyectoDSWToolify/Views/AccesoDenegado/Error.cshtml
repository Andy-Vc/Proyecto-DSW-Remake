@{
	Layout = null;
	ViewData["Title"] = "Acceso Denegado";

	string controlador = "Cliente";
	string accion = "Index";

	if (User.Identity.IsAuthenticated)
	{
		if (User.IsInRole("A"))
		{
			controlador = "Admin";
			accion = "Dashboard";
		}
		else if (User.IsInRole("V"))
		{
			controlador = "Vendedor";
			accion = "Index";
		}
		else if (User.IsInRole("R"))
		{
			controlador = "Repartidor";
			accion = "Index";
		}
		else if (User.IsInRole("C"))
		{
			controlador = "Cliente";
			accion = "Index";
		}
	}
}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Toolify</title>
	<link rel="stylesheet" href="~/css/site.css" />
	<style>
		body {
			background-color: #f8f9fa;
			font-family: 'Segoe UI', sans-serif;
			overflow: hidden;
		}

		.error-container {
			display: flex;
			align-items: center;
			justify-content: center;
			min-height: 100vh;
			flex-direction: column;
			text-align: center;
			padding: 2rem;
		}

		.error-code {
			font-size: 8rem;
			font-weight: 700;
			color: #576EAA;
			line-height: 1; 
			margin-bottom: 1rem;
		}

		.error-title {
			font-size: 2.8rem;
			font-weight: 600;
			margin-bottom: 1.5rem;
			color: #333;
		}

		.error-message {
			font-size: 1.3rem;
			color: #666;
			max-width: 650px;
			margin-bottom: 2.5rem;
			line-height: 1.6;
		}

		.btn-custom {
			padding: 0.85rem 1.8rem;
			font-size: 1.1rem;
			border-radius: 0.5rem;
			transition: all 0.3s ease;
		}

			.btn-custom:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
			}
	</style>
</head>
<body>
	<div class="error-container">
		<div class="error-code">403</div>
		<div class="error-title">¡Ups! Acceso Denegado</div>
		<div class="error-message">
			Parece que no tienes los permisos necesarios para ver esta sección de Toolify. <br />
			Si crees que esto es un error, por favor, contacta con el administrador.
		</div>
		<a asp-controller="@controlador" asp-action="@accion" class="btn bg-color-primary btn-custom shadow" style="text-decoration:none; color:white;">
			Volver al Inicio
		</a>
	</div>
</body>
</html>